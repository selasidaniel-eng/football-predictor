# ===========================
# FOOTBALL PREDICTOR - ENV TEMPLATE
# Copy to .env and fill in your values
# ===========================

# FastAPI Configuration
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# Database
DATABASE_URL=postgresql://football_dev:dev_password@localhost:5432/football_predictor_db
DATABASE_POOL_SIZE=20
DATABASE_POOL_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Data Sources
API_FOOTBALL_KEY=your-api-football-key-optional
SOFASCORE_BASE_URL=https://www.sofascore.com
LIVESCORE_BASE_URL=https://www.livescore.com

# OpenWeatherMap API
OPENWEATHERMAP_API_KEY=your-openweathermap-key

# Scraper Settings
SCRAPER_ENABLED=true
SCRAPER_DELAY_MIN=2
SCRAPER_DELAY_MAX=5
PLAYWRIGHT_HEADLESS=true

# Scheduler
SCHEDULER_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (Error Tracking)
SENTRY_DSN=

# Feature Flags
ENABLE_PREDICTIONS=true
ENABLE_LIVE_UPDATES=true
ENABLE_INJURY_TRACKING=true
ENABLE_WEBSOCKET=false
